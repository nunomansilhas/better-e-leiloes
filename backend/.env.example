# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Security - HMAC Authentication
# IMPORTANT: Change this to a strong random key in production!
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
API_SECRET_KEY=your-secret-key-here-change-in-production

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Additional whitelist IPs (comma-separated, localhost is always whitelisted)
# WHITELIST_IPS=192.168.1.100,10.0.0.50

# Database
# SQLite (desenvolvimento local):
# DATABASE_URL=sqlite+aiosqlite:///./eleiloes.db

# MySQL/MariaDB (produção - phpMyAdmin):
DATABASE_URL=mysql+aiomysql://username:password@localhost:3306/eleiloes

# Redis Cache (opcional)
REDIS_URL=redis://localhost:6379

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://www.e-leiloes.pt,https://e-leiloes.pt

# Scraping Configuration
SCRAPE_DELAY=0.8
CONCURRENT_REQUESTS=4
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
